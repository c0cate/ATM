<Window x:Class="ATM.settingsMiniForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="D:\\!studying\\!C#\\ATM — копия\\ATM\\Resources\\mainLogo.ico"
        Title="settingsMiniForm" Height="200" Width="300">
    <Grid>
        <Label x:Name="titleLabel" Content="Введите число" Height="50" VerticalAlignment="Top" FontSize="20" Margin="25" FontWeight="DemiBold"/>
        <TextBox x:Name="numberTB" Text="12/56" Height="50" Margin="25" Background="#FFBCBCBC" FontSize="25"/>
        <Button x:Name="cancelButton" Content="Отмена" FontWeight="DemiBold" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="25" Width="120" Click="cancelButton_Click" />
        <Button x:Name="confirmButton" Content="Подтвердить" FontWeight="DemiBold" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="25" Width="120" Click="confirmButton_Click" />
    </Grid>
</Window>
